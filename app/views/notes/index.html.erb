<%= link_to 'New Note', new_note_path, class: "btn btn-success pull-right" %>
<h1>Notes</h1>

<table class="table table-bordered table-condensed table-hover table-responsive text-center">
  <thead>
    <tr>
      <th>Owner ID</th>
      <th>Title</th>
      <th>Description</th>
      <!-- <th colspan="3"></th> -->
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.user_id %></td>
        <td><%= note.name %></td>
        <td><%= note.description %></td>
        <!-- <td><%= link_to 'Show', note %></td> -->
        <!-- <td><%= link_to 'Edit', edit_note_path(note) %></td> -->
        <!-- <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        <td><%= link_to 'Show', note, :class => "btn btn-info" %> <%= link_to 'Edit', edit_note_path(note), :class => "btn btn-primary" %> <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

